<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:background="@drawable/drawable_home_progress">

            <LinearLayout
                android:id="@+id/build_habit_progress"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:background="@drawable/drawable_progress_build"
                android:layout_gravity="bottom"
                android:layout_marginLeft="80dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="90%"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="9/10 build habits"
                        android:textColor="#DCDCDC"
                        android:textSize="10dp"
                        android:gravity="center" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/break_habit_progress"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:background="@drawable/drawable_progress_break"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="90%"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="9/10 break habits"
                        android:textColor="#DCDCDC"
                        android:textSize="10dp"
                        android:gravity="center" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#DEDEDE" />

    </LinearLayout>

</LinearLayout> 